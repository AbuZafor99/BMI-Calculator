<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d3d3c3"
    android:padding="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#b0b098"
        android:gravity="center"
        android:text="BMI Calculator"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/bmiResultText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="আপনার BMI: "
        android:textSize="22sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/bmimeter"
        android:scaleType="fitCenter"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="#c6c6b5">

        <TextView
            android:id="@+id/foodSuggestionText"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="8dp"
            android:text="খাদ্য নির্দেশনা লোড হচ্ছে..."
            android:textColor="#444444"
            android:textSize="18sp"
            android:gravity="center"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        >
        <!-- Home Button -->
        <Button
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🏠 হোম"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="10dp"/>

        <!-- Food Button -->
        <Button
            android:id="@+id/foodButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🍎 খাদ্য"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="10dp"/>

        <!-- Exercise Button -->
        <Button
            android:id="@+id/exerciseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="💪 ব্যায়াম"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>
